<?xml version="1.0" encoding='iso-8859-1' ?>
<project
	name="Castle.Facilities.NHibernateIntegration.Tests"
	default="test"
	xmlns="http://nant.sf.net/release/0.85/nant.xsd"
>

	<property name="common.scripts.dir" value="../../buildscripts/" />
	<include buildfile="${common.scripts.dir}/common-project.xml" />
	
	<property name="nhf.dialect" value="NHibernate.Dialect.MsSql2005Dialect" overwrite="false"/>
	<property name="nhf.connection.driver_class" value="NHibernate.Driver.SqlClientDriver" overwrite="false"/>
	<property name="nhf.connection.connection_string.1" value="Server=(local);initial catalog=test;Integrated Security=SSPI" overwrite="false"/>
	<property name="nhf.connection.connection_string.2" value="Server=(local);initial catalog=test2;Integrated Security=SSPI" overwrite="false"/>

	<target name="init" depends="common.init">
		<assemblyfileset id="project.references" basedir="${build.dir}">
			<include name="nunit.framework.dll"/>
			<include name="Castle.Facilities.NHibernateIntegration.dll" />
			<include name="NHibernate.dll" />
			<include name="Iesi.Collections.dll" />
			<include name="Rhino.Mocks.dll" />
			<include name="Castle.Core.dll" />
			<include name="Castle.Services.Transaction.dll" />
			<include name="Castle.MicroKernel.dll" />
			<include name="Castle.Windsor.dll" />
			<include name="Castle.Facilities.AutomaticTransactionManagement.dll" />
			<include name="System.Configuration.dll" />
			<include name="log4net.dll" />
			<include name="System.Data.dll" />
			<include name="MySql.Data.dll" if="${common.mono}" />
		</assemblyfileset>
		
		<resourcefileset id="project.resources" prefix="${project::get-name()}" dynamicprefix="true">
			<include name="${src.dir}/**/*.hbm.xml" />
			<exclude name="${src.dir}/obj/**" />
			<include name="${src.dir}/**/*.xml" />
			<include name="${src.dir}/*.xml" />
		</resourcefileset>
	</target>
	<target name="configure-tests">
		<property name="app.config" value="${build.dir}/${project::get-name()}.dll.config" />

		<xmlpoke
			file="${app.config}"
			xpath="/configuration/appSettings/add[@key='nhf.dialect']/@value"
			value="${nhf.dialect}" 
		/>
		<xmlpoke
			file="${app.config}"
			xpath="/configuration/appSettings/add[@key='nhf.connection.driver_class']/@value"
			value="${nhf.connection.driver_class}" 
		/>
		<xmlpoke
			file="${app.config}"
			xpath="/configuration/appSettings/add[@key='nhf.connection.connection_string.1']/@value"
			value="${nhf.connection.connection_string.1}" 
		/>
		<xmlpoke
			file="${app.config}"
			xpath="/configuration/appSettings/add[@key='nhf.connection.connection_string.2']/@value"
			value="${nhf.connection.connection_string.2}" 
		/>
	</target>

	<target name="generate-assemblyinfo" depends="init common.generate-assemblyinfo" />

	<target name="test" depends="init generate-assemblyinfo common.compile-tests configure-tests common.run-tests" description="Runs the tests" />

</project>
